{
  "compileOnSave": false,
  "compilerOptions": {
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es5",
    "module": "es2015",
    "typeRoots": ["node_modules/@types"],
    "lib": ["es2017", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@tinynodes/*": ["libs/*"],
      "@tinynodes/ngx-editorjs": ["libs/ngx-editorjs/src/index.ts"],
      "@tinynodes/ngx-editorjs-demo": ["libs/ngx-editorjs-demo/src/index.ts"],
      "@tinynodes/ngx-editorjs-plugins": ["libs/ngx-editorjs-plugins/src/index.ts"],
      "@tinynodes/ngx-editorjs-ngrx": ["libs/ngx-editorjs-ngrx/src/index.ts"],
      "@tinynodes/ngx-hideable-header-demo": ["libs/ngx-hideable-header-demo/src/index.ts"],
      "@tinynodes/ngx-tinynodes-core": ["libs/ngx-tinynodes-core/src/index.ts"],
      "@tinynodes/ngx-tilted-scroll": ["libs/ngx-tilted-scroll/src/index.ts"],
      "@tinynodes/ngx-tilted-page-scroll-demo": ["libs/ngx-tilted-page-scroll-demo/src/index.ts"]
    },
    "downlevelIteration": true
  },
  "exclude": ["node_modules", "tmp"]
}
